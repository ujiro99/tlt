{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/js",
    "rootDir": "src",
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "*": ["src/@types/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
